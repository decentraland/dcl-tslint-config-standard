{
  "name": "dcl-tslint-config-standard",
  "version": "1.1.0",
  "description": "A TSLint config for JavaScript Standard Style",
  "main": "tslint.js",
  "files": [
    "tslint.js",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "lint": "standard",
    "lint:fix": "standard --fix",
    "test:gen": "GENERATE_ASSETS=true blue-tape test/index.js",
    "test:spec": "blue-tape test/index.js | tap-spec",
    "test": "npm run lint && npm run test:spec",
    "build": "npm run lint",
    "semantic-release": "semantic-release",
    "commit-msg": "validate-commit-msg"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/decentraland/tslint-config-standard.git"
  },
  "keywords": [
    "tslint",
    "config",
    "standard",
    "standardjs",
    "typescript",
    "ts"
  ],
  "author": {
    "name": "Decentraland",
    "email": "hello@decentraland.org",
    "url": "https://decentraland.org"
  },
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/decentraland/tslint-config-standard/issues"
  },
  "homepage": "https://github.com/decentraland/tslint-config-standard",
  "devDependencies": {
    "@types/node": "^9.6.0",
    "blue-tape": "^1.0.0",
    "husky": "^4.3.8",
    "semantic-release": "^17.3.6",
    "standard": "^16.0.3",
    "tap-spec": "^5.0.0",
    "tslint": "^5.9.1",
    "typescript": "^4.1.3",
    "validate-commit-msg": "^2.14.0"
  },
  "dependencies": {
    "tslint-clean-code": "^0.2.5",
    "tslint-eslint-rules": "^5.1.0",
    "tslint-no-circular-imports": "^0.2.1"
  }
}
